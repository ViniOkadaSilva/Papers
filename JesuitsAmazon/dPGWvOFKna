@ARTICLE{Clement2015-rf,
  title    = "The domestication of Amazonia before European conquest",
  author   = "Clement, Charles R and Denevan, William M and Heckenberger,
              Michael J and Junqueira, Andr{\'e} Braga and Neves, Eduardo G and
              Teixeira, Wenceslau G and Woods, William I",
  abstract = "During the twentieth century, Amazonia was widely regarded as
